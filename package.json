{
  "name": "@fnu/poshett-web",
  "version": "0.2.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run watch-ts & npm run watch-sass",
    "watch-ts": "tsc -p tsconfig.json -w",
    "watch-sass": "node-sass -w ./src/style/style.sass ./dist/public/css/compiled.css",
    "build": "npm run build-ts & npm run build-sass & npm run build-static",
    "build-ts": "tsc -p tsconfig.json",
    "build-sass": "node-sass ./src/style/style.sass ./dist/public/css/compiled.css",
    "build-static": "copyfiles -f src/public/index.html dist/public/",
    "start": "node ./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "4.16.4",
    "ws": "6.1.3"
  },
  "devDependencies": {
    "@types/express": "4.16.1",
    "@types/node": "10.12.18",
    "@types/ws": "6.0.1",
    "copyfiles": "2.1.0",
    "node-sass": "4.11.0",
    "typescript": "3.2.4"
  }
}
